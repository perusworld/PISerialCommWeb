extends layout

block content
  h1= title
  .panel.panel-default
    .panel-heading Send a message through Serial
    .panel-body
      form.form-inline(action='/send', method='POST')
        .form-group
          input.form-control(type='text',name='msg',placeholder="Message")
        button.btn.btn-default(type='submit') Send
  .panel.panel-default
    .panel-heading Logs
    .panel-body
      table.table.table-striped
        thead
          tr
            th #
            th Timestamp
            th Message
        tbody
          - var index = logs.buffer.length
          while 0 < index--
            tr
              td= index+1
              td= logs.buffer[index].ts
              td= logs.buffer[index].msg
