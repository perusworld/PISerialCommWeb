extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action='/send', method='POST')
    input(type='text',name='msg')
    input(type='submit')
  h2.page-header= 'Logs'
  table.table.table-striped
    thead
      tr
        th #
        th Timestamp
        th Message
    tbody
      - var index = logs.buffer.length
      while 0 < index--
        tr
          td= index+1
          td= logs.buffer[index].ts
          td= logs.buffer[index].msg
